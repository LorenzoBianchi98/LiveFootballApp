<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#292929"
    tools:context=".fragments.ProfileFragment">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textSize="20dp"
            android:textColor="@color/white"></TextView>
    </androidx.appcompat.widget.Toolbar>

    <ImageView
        android:id="@+id/googleSignInBtn"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="75dp"
        android:src="@drawable/user" />

    <TextView
        android:id="@+id/profile_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="85dp"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textSize="19sp" />

    <Button
        android:id="@+id/logoutBtn"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_marginLeft="185dp"
        android:layout_marginTop="115dp"
        android:backgroundTint="@android:color/darker_gray"
        android:text="Logout"
        android:textColor="@color/white"
        android:textSize="12dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="180dp"
        android:layout_marginRight="10dp"
        android:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/text_fav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="195dp"
        android:text="Favorite Leagues:"
        android:textColor="@android:color/darker_gray"
        android:textSize="18sp" />


    <ImageView
        android:id="@+id/seriea_logo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/seriea" />

    <TextView
        android:id="@+id/text_seriea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="37dp"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:text="Serie A"
        />

    <ImageView
        android:id="@+id/empty_star_sa"
        android:layout_width="25sp"
        android:layout_height="25sp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="375dp"
        android:src="@android:drawable/btn_star_big_off" />

    <ImageView
        android:id="@+id/star_sa"
        android:layout_width="25sp"
        android:layout_height="25sp"
        android:layout_marginTop="375dp"
        android:layout_marginLeft="50dp"
        android:src="@android:drawable/btn_star_big_on"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/pl_logo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="145dp"
        android:src="@drawable/pl" />

    <TextView
        android:id="@+id/text_pl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="130dp"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:text="Premier League"
        />

    <ImageView
        android:id="@+id/empty_star_pl"
        android:layout_width="25sp"
        android:layout_height="25sp"
        android:layout_marginLeft="175dp"
        android:layout_marginTop="375dp"
        android:src="@android:drawable/btn_star_big_off" />

    <ImageView
        android:id="@+id/star_pl"
        android:layout_width="25sp"
        android:layout_height="25sp"
        android:layout_marginTop="375dp"
        android:layout_marginLeft="175dp"
        android:src="@android:drawable/btn_star_big_on"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/ligue1_logo"
        android:layout_width="90dp"
        android:layout_height="95dp"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="260dp"
        android:src="@drawable/ligue1" />

    <TextView
        android:id="@+id/text_ligue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="280dp"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:text="Ligue 1"
        />


    <ImageView
        android:id="@+id/empty_star_l1"
        android:layout_width="25sp"
        android:layout_height="25sp"
        android:layout_marginLeft="295dp"
        android:layout_marginTop="375dp"
        android:src="@android:drawable/btn_star_big_off" />

    <ImageView
        android:id="@+id/star_l1"
        android:layout_width="25sp"
        android:layout_height="25sp"
        android:layout_marginTop="375dp"
        android:layout_marginLeft="295dp"
        android:src="@android:drawable/btn_star_big_on"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/bundesliga_logo"
        android:layout_width="70dp"
        android:layout_height="95dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="420dp"
        android:src="@drawable/bundesliga" />

    <TextView
        android:id="@+id/text_bundesliga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="520dp"
        android:text="Bundesliga"
        android:textColor="@android:color/white"
        android:textSize="18sp" />


    <ImageView
        android:id="@+id/empty_star_bl"
        android:layout_width="25sp"
        android:layout_height="25sp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="545dp"
        android:src="@android:drawable/btn_star_big_off" />

    <ImageView
        android:id="@+id/star_bl"
        android:layout_width="25sp"
        android:layout_height="25sp"
        android:layout_marginTop="545dp"
        android:layout_marginLeft="50dp"
        android:src="@android:drawable/btn_star_big_on"
        android:visibility="gone"/>


    <ImageView
        android:id="@+id/laliga_logo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="420dp"
        android:layout_marginLeft="145dp"
        android:src="@drawable/laliga" />

    <TextView
        android:id="@+id/text_laliga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="520dp"
        android:text="LaLiga"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/empty_star_ll"
        android:layout_width="25sp"
        android:layout_height="25sp"
        android:layout_marginLeft="175dp"
        android:layout_marginTop="545dp"
        android:src="@android:drawable/btn_star_big_off" />

    <ImageView
        android:id="@+id/star_ll"
        android:layout_width="25sp"
        android:layout_height="25sp"
        android:layout_marginTop="545dp"
        android:layout_marginLeft="175dp"
        android:src="@android:drawable/btn_star_big_on"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/portugal_logo"
        android:layout_width="90dp"
        android:layout_height="95dp"
        android:layout_marginTop="420dp"
        android:layout_marginLeft="260dp"
        android:src="@drawable/portugal" />

    <TextView
        android:id="@+id/text_portugal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="520dp"
        android:text="Liga Portugal"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/empty_star_lp"
        android:layout_width="25sp"
        android:layout_height="25sp"
        android:layout_marginLeft="295dp"
        android:layout_marginTop="545dp"
        android:src="@android:drawable/btn_star_big_off" />

    <ImageView
        android:id="@+id/star_lp"
        android:layout_width="25sp"
        android:layout_height="25sp"
        android:layout_marginTop="545dp"
        android:layout_marginLeft="295dp"
        android:src="@android:drawable/btn_star_big_on"
        android:visibility="gone"/>


</RelativeLayout>